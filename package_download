git clone https://github.com/cellarium-ai/SynapseCLR.git
cd SynapseCLR

# Using Conda
conda create -n synapseclr python=3.10
conda activate synapseclr

# OR using venv
python -m venv venv
source venv/bin/activate  # On Windows use: venv\Scripts\activate

pip install -r requirements.txt
pip install -e .

import pytorch_synapse
print("SynapseCLR is ready!")
